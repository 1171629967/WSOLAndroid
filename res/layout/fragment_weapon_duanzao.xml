<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rl_actionbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <!-- 五大锻造属性模块 -->

    <LinearLayout
        android:id="@+id/ll_shuxingPart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_actionbar"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <!-- 攻击1 -->

        <RelativeLayout
            android:id="@+id/rl_gongji1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_gongjili"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="攻击力"
                android:textColor="#b99f98"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_gongjili"
                android:layout_toRightOf="@+id/tv_gongjili"
                android:layout_toLeftOf="@+id/tv_slot_gongji"
                android:orientation="horizontal" >

                <!-- 攻击基础值 -->

                <TextView
                    android:id="@+id/tv_base_gongjili"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
                
                <!-- 攻击上升值 -->

                <TextView
                    android:id="@+id/tv_rise_gongjili"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="( + 50 )"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- 强化位文字 -->

            <TextView
                android:id="@+id/tv_slot_gongji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_gongjili"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/tv_slotNumber_gongji"
                android:text="slot"
                android:textColor="@color/gray"
                android:textSize="20sp"
                android:textStyle="italic" />
            <!-- 几号强化位 -->

            <TextView
                android:id="@+id/tv_slotNumber_gongji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_gongjili"
                android:layout_alignParentRight="true"
                android:text="5"
                android:textColor="@color/gray"
                android:textSize="22sp"
                android:textStyle="italic" />
        </RelativeLayout>

        <!-- 攻击2 -->

        <LinearLayout
            android:id="@+id/ll_gongji2"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/borner_weapon_duanzao"
            android:orientation="horizontal"
            android:padding="0.5px" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>